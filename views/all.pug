doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  style 
    include Resources/bootstrap.css
  title Canales
nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
  a.navbar-brand(href='#') Youtube
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarColor01' aria-controls='navbarColor01' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarColor01.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href='/canal') Home
      li.nav-item.active
        a.nav-link()
          | Ver Canales 
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='/canal/search') Buscar Canal
      li.nav-item
        a.nav-link(href='/canal/delete') Eliminar Canal
      li.nav-item
        a.nav-link(href='/canal/update') Actualizar Canal
.container
  br
  .jumbotron
    h1
      | Canales Registrados
  hr
  section
    table.table.table-hover
      thead
        tr.table-dark
          th(scope='col')
          th(scope='col') Canal
          th(scope='col') Propietario
          th(scope='col') Subscriptores
          th(scope='col') Fecha de Creacion
      tbody#table_body  
        - for (var x = 0; x < {cant}.cant; x++)
          tr     
            td
            td #{{arreglo}.arreglo[x].nombre}
            td #{{arreglo}.arreglo[x].propietario}
            td #{{arreglo}.arreglo[x].subscriptores}
            td #{{arreglo}.arreglo[x].createdAt}
            
         

        
          
        
  